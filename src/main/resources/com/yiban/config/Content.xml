<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0 //EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiban.mapper.ContentMapper">
    <resultMap id="leaveContent" type="com.yiban.bean.LeaveContent">
        <result column="student_id" property="studentId"/>
        <result column="student_name" property="name"/>
        <result column="department" property="department"/>
        <result column="major" property="major"/>
        <result column="grade" property="grade"/>
        <result column="class_no" property="classNo"/>
        <result column="begin_time" property="beginTime"/>
        <result column="end_time" property="endTime"/>
        <result column="reason" property="reason"/>
        <result column="is_agree" property="isAgree"/>
        <result column="is_back" property="isBack"/>
    </resultMap>

    <insert id="addContent">
        INSERT INTO content VALUES
            (0,#{studentId},#{name},#{department},#{major},#{grade},#{classNo},#{beginTime,jdbcType=TIMESTAMP},#{endTime,jdbcType=TIMESTAMP},#{reason},'wait',#{isBack})
    </insert>

</mapper>